<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@android:color/white" xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:padding="2dp"
                android:id="@+id/Fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abdelsattar Ahmed"
                android:textStyle="bold"
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:dividerPadding="2dp"
            android:showDividers="middle"
            android:divider="@drawable/text_diver"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/hostory"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="history"
                    android:textColor="@color/colorSecondaryText"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vaccination"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/vac"
                    android:tint="@color/colorPrimary"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vaccination"
                    android:textStyle="bold"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Sedit"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="edit"
                    android:textStyle="bold"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="15dp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>